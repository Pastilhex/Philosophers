# Define variables
NAME = philo
GDB = -g
PT = -pthread
SRC = $(wildcard *.c)   # Use wildcard to get a list of all .c files
OBJ = $(SRC:.c=.o)
CC = gcc                # Correct the compiler command

# Default target
all: $(NAME)

# Rule to build the executable
$(NAME): $(OBJ)
	$(CC) $(OBJ) $(PT) $(GDB) -o $(NAME)

# Rule to build object files from source files
%.o: %.c
	$(CC) $(GDB) $(PT) -c $< -o $@

# Clean rule
clean:
	rm -f $(NAME) $(OBJ)
